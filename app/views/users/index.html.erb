<div class="profile clearfix">
  <%= form_tag  search_index_path, method: :get, class:"navbar-form navbar-left" do %>
    <%= text_field_tag :search, params[:search], class:"form-control", placeholder:"Search" %>
    <%= submit_tag 'Search',  class:"btn btn-raised btn-primary" %>
  <% end %>
</div>

<% if @users.present? %>
  <%  @users.each do |user| %>
    <div class="profile clearfix">
      <% if user.avatar? %>
        <%= link_to image_tag(user.avatar.url(:thumb)), user_path(user.id), class: 'gravatar' %>
      <% else %>
        <%= link_to image_tag('https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRtNAniTIhO_bj2xsg2lxWHQqK1Zd1bpDPaoGhWjHPaERAANFnw6g', size: '100x100', class: 'gravatar') %>
      <% end %>

      <div><%= link_to user.first_name+ ' ' +user.last_name, user_path(user.id)%>
      </div>
      <div><%= user.email%>
      </div>
      <% if user != current_user %>
          <% if current_user.following?(user)%>
            <%= link_to 'Unfollow', user_relationship_path(user, current_user.active_relationships.find_by(followed_id: user.id)), method: :delete, class: 'btn btn-primary' %>
          <%else%>

            <%= link_to 'Follow', user_relationships_path(user), method: :post, class: 'btn btn-primary' %>
          <%end%>
      <%else%>
        <h4>It's you!!!</h4>
      <%end%>
    </div>
  <% end %>

  <% else %>
    <%= 'Records not found'%>

<% end %>
